<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/item_type_iv_cri"
        android:layout_width="@dimen/recycler_icon_size"
        android:layout_height="@dimen/recycler_icon_size"
        android:src="@drawable/ic_t_shirt"
        android:layout_margin="@dimen/small_margin_padding"
        />
    <TextView
        android:id="@+id/item_name_tv_cri"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/recycler_icon_size"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/medium_text_size"
        />

</LinearLayout>