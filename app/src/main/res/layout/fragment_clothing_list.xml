<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui_layer.fragments.ClothingListFragment"
    >

    <TextView
        android:id="@+id/no_item_tv"
        style="@style/large_tv_style"
        android:layout_centerHorizontal="true"
        android:text="@string/no_items_found_please_add_some"
        />

    <include
        android:id="@+id/item_preview_layout"
        layout="@layout/item_preview"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_rv"
        android:layout_marginTop="@dimen/medium_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_preview_layout"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_item_fab_clf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_below="@+id/item_preview_layout"
        android:layout_marginTop="-8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/medium_margin_padding"
        android:elevation="@dimen/fab_elevation"
        />


</RelativeLayout>
