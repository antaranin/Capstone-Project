<resources>

    <style name="wraped_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_style" parent="wraped_style">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="large_tv_style" parent="text_view_style">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="medium_tv_style" parent="text_view_style">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="small_tv_style" parent="text_view_style">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="fillable_view_ll_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="max_fill">@integer/resistance_count</item>
    </style>

    <style name="x_large_tv_style" parent="text_view_style">
        <item name="android:textSize">@dimen/x_large_text_size</item>
    </style>

    <style name="xx_large_tv_style" parent="text_view_style">
        <item name="android:textSize">@dimen/xx_large_text_size</item>
    </style>

    <style name="NoBarAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="NoBarAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
